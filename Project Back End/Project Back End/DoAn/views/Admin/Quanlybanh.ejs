		<form action="/PrintCakeSearch" method="GET">

  <div class="col-xs-10" style="margin-top: 5%">
    <div class="input-group" style="width: 40%;">
      <input type="text" class="form-control" name="cake" placeholder="Search">
      <span class="input-group-btn">
        <button id="delete" onclick="dele();" class="btn btn-default" type="submit" value="search" style="margin-top: 0px;"><span class="glyphicon glyphicon-search"></span></button>
      </span>
			<script>

				function dele(){
					// swal("Good job!", "You clicked the button!", "success");
					swal({
		  title: "Are you sure?",
		  text: "Once deleted, you will not be able to recover this imaginary file!",
		  icon: "warning",
		  buttons: true,
		  dangerMode: true,
		})
		.then((willDelete) => {
		  if (willDelete) {
		    swal("Poof! Your imaginary file has been deleted!", {
		      icon: "success",
		    });
		  } else {
		    swal("Your imaginary file is safe!");
		  }
		});
				}


			</script>
    </div>
		</form>
    <table class="table table-bordered" style="margin-top: 5%">
    <tr>
    <th>Tên Bánh</th>
		<th>Miêu Tả </th>
    <th>Nguyên Liệu</th>
