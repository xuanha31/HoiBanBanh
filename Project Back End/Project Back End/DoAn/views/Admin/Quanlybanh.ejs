  </tr>
	<%if (result.length > 0) {%>
	<% for(var i=0;i<result.length; i++){%>


	  <tr>

	    <td><%= result[i].name_cake%></td>
			<td><%= result[i].description%></td>
			<td>
			
			<% for(var n=0;n<result[i].material.length; n++){%>
			 <option value="<%= result[i].material[n]%>"  selected="selected"><%= result[i].material[n]%></option>
			<%}%>

			</td>
			<td><%= result[i].name_size%></td>
			<td><%= result[i].price%></td>
			<td><%= result[i].quantity%></td>
			<td><%= result[i].status%></td>
			<td>
			<button type="button" name="Update" value ="Update" onclick="window.location.href='/InfoUpdateCake?id=<%= result[i]._id%>';">Update</button>
		 </td>
	  </tr>
	  <% }} %>

