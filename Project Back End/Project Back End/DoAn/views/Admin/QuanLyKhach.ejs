  <div class="col-xs-10" style="margin-top: 5%">
		<form action="/PrintAccountSearch.js" method="GET">
    <div class="input-group" style="width: 40%;">
      <input type="text" class="form-control" name="user">
      <span class="input-group-btn">
        <button class="btn btn-default" type="submit" value="Search" style="margin-top: 0px;"><span class="glyphicon glyphicon-search"></span></button>
      </span>
    </div>
		</form>
		<form action="/UpdateHuman?" method="GET">
    <table class="table table-bordered" style="margin-top: 5%">
    <tr>
    <th>Email</th>
    <th>Tên Khách Hàng</th>
    <th>Địa Chỉ</th>
    <th>Điện Thoại</th>
    <th>Ngày Tạo</th>
		<th>Ngày Thay Đổi</th>
		<th>Vai trò</th>
    <th>Chặn</th>
  </tr>
<%if (result.length > 0) {%>
<% for(var i=0;i<result.length; i++){%>

  <tr>

    <td><%= result[i].email%></td>
    <td><%= result[i].name%></td>
    <td><%= result[i].address%></td>
    <td><%= result[i].phone%></td>
    <td><%= result[i].date_create%></td>
		<td><%= result[i].date_update%></td>


		<% if(result[i].role == 1){ %>
			<td>
	     Khách Hàng
	    </td>
		<%}else{%>
			<td>
				Nhân Viên
			</td>
		<%} %>

		<% if(result[i].black_list == true){ %>
			<td>
	      <input type="checkbox" value="true" name ="lock" checked>
	    </td>
		<% } else{%>
			<td>
				<input type="checkbox" value="false"  name ="lock" >
			</td>
		<%} %>
		<td><button type="button" class="btn btn-default" onclick="window.location.href='/BlockUser?id=<%=result[i]._id%>';">Khóa Tài Khoản</button></td>
		<td><button type="button" class="btn btn-default" onclick="window.location.href='/UnBlockUser?id=<%=result[i]._id%>';">Mở Khóa Tài Khoản </button></td>
		<td>
			<button type="button" name="Update" value ="Update" onclick="window.location.href='/InfoUpdateStaff?id=<%= result[i]._id%>';">Update</button>
		</td>


  </tr>
  <% }} %>
    </table>
      <button type="clear" class="btn btn-default">Hủy</button>
      <button type="submit" class="btn btn-default" value="save">Lưu</button>

  </div>

